<odoo>

    <record id="hotels_settings_view_form" model="ir.ui.view">
        <field name="name">hotels.settings.view.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="10"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" string="Hotels Settings" data-key="hotel_settings">
                    <h2>Hotelzov Settings</h2>
                    <div class="row mt16 o_settings_container" name="users_setting_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="active_user_setting">
                            <div class="o_setting_right_pane">
                                <span class='o_form_label'>
                                    Hotelzov URL:
                                </span>
                                <field name="url_hz"/>
                                <button name="test_url" type="object" string="Test"/>
                            </div>
                        </div>
                    </div>

                    <div invisible="0">
                        <h2>Hotels Import</h2>
                        <div class="row mt16 o_settings_container" name="users_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box" id="active_user_setting">
                                <div class="o_setting_right_pane">
                                    <span class='o_form_label'>
                                        Hotels in paket:
                                    </span>
                                    <field name="num_hotels_in_paket"/>
                                    <br/>
                                    <button name="import_hotels" type="object" string="Import"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <record id="hotels_settings_action" model="ir.actions.act_window">
        <field name="name">Hotels settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_id" ref="hotels_settings_view_form"/>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
    </record>

    <menuitem id="hotels_settings_menu" name="Hotels settings"
        parent="base.menu_config" action="hotels_settings_action"/>

</odoo>
